################################################################################
# NAME
#   get_hostname - get the current system hostname
# SYNOPSIS
#   get_hostname
# RETURN VALUE
#   hostname
################################################################################
get_hostname() {
    # some systems do not have hostname tool installed
    run_command "hostname" "/dev/null"
    if [ $? -eq 0 ]; then
        hostname
    elif [ -r "/etc/hostname" ]; then
        head -1 "/etc/hostname" 2>/dev/null
    else
        echo "unknown"
    fi
}
