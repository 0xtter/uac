################################################################################
# NAME
#   get_machine_arch - get machine architecture using uname tool
# SYNOPSIS
#   get_machine_arch
# RETURN VALUE
#   machine architecture
################################################################################
get_machine_arch() {
    case "$PROFILE" in
        "aix"     ) uname -p ;;
        "bsd"     ) uname -m ;;
        "linux"   ) uname -m ;;
        "macos"   ) uname -m ;;
        "solaris" ) uname -p ;;
    esac
}
