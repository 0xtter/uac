################################################################################
# NAME
#   ask_question_yn - make a Yes or No question
# SYNOPSIS
#   ask_question_yn QUESTION
# RETURN VALUE
#   true for Yes
#   false for No
################################################################################
ask_question_yn() {
    while true; do
        printf %b "$1 [y/n] " >/dev/tty
        read ANSWER
        case $ANSWER in
            "Y"|"y") return 0 ;;
            "N"|"n") return 1 ;;
            * ) printf %b "Please answer y or n\n" >/dev/tty ;;
        esac
    done
    return 1
}
