# hash_exec extension

if [ ! -z "$FILE_TOOL" ]; then

    run_command "ufind \"$MOUNT_POINT\" \"$HASH_EXEC_MAX_DEPTH\" \"$CWD/conf/exclude.conf\" \"\" \"f\" \"$HASH_EXEC_MAX_FILE_SIZE\" \"$DATE_RANGE_T1\" \"$DATE_RANGE_T2\" | while read line; do $FILE_TOOL \"\$line\" | egrep -q \"(ELF|MZ|executable|PE32|shared object|script)\" && $MD5SUM_TOOL \"\$line\"; done" "$EXTENSION_OUTPUT_DIR/hash_exec.txt"

else
    logging D "Cannot hash executable files. No file tool found on the system.\n"
fi